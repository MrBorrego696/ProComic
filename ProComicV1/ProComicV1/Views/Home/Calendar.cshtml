
@{
    ViewData["Title"] = "Calendario";
}
<head>
    <link href="~/css/StyleCalendar.css" rel="stylesheet" type="text/css" />
    
</head>
<h1>Calendario</h1>
<body>
    <!--Inicio de la lista de editoriales-->
    <div class="row">
        <div class="col-md-3">
            <h2><a href="#DC"><img src="~/images/carrousel-2.png" /></a></h2>
            <ul>
                <li>DC Cómics México</li>
            </ul>
        </div>
        <div class="col-md-3">
            <h2><a href="#Marvel"><img src="~/images/carrousel-1.jpg" /></a></h2>
            <ul>
                <li>Marvel Cómics México</li>
            </ul>
        </div>
        <div class="col-md-3">
            <h2><a href="#Panini"><img src="~/images/carrousel-4.jpg" /></a></h2>
            <ul>
                <li>Panini Cómics México</li>
            </ul>
        </div>
        <div class="col-md-3">
            <h2><a href="#Kamite"><img src="~/images/carrousel-3.png" /></a></h2>
            <ul>
                <li>Kamit&#600 México</li>
            </ul>
        </div>
    </div>
    <!--Fin de la lista de editoriales-->
    <h2>Eventos Actuales</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/tem.jpg" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Batman Metal.
                        <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Ir al Evento
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/tem.jpg" alt="Microsoft Azure" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
                        <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <h3>Recomendaciones</h3>

</body>